@prefix :            <https://raw.githubusercontent.com/schreckl/rules/master/rules/accessible-building/assistance-for-hearing-impaired-people.ttl#> .
@prefix build:       <https://github.com/AKSW/leds-asp-f-ontologies/raw/master/ontologies/building/ontology.ttl#> .
@prefix buildaccess: <https://github.com/AKSW/leds-asp-f-ontologies/raw/master/ontologies/building-accessibility/ontology.ttl#> .
@prefix dc:          <http://purl.org/dc/elements/1.1/> .
@prefix rdf:         <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:          <http://www.w3.org/ns/shacl#> .
@prefix wa:          <http://semweb.mmlab.be/ns/wa#> .
@prefix xsd:         <http://www.w3.org/2001/XMLSchema#> .

# the following constraints describe a building, which provides assistance for hearing impaired people,
# for instance induction loops, deaf-and-dump interpreters or other aids.

# assistance is given, if building resource has property buildaccess:supportForHearingImpairedAvailable
# with value "true"^^xsd:boolean .

:AssistanceForHearingImpairedPeopleShape
    rdf:type sh:NodeShape ;
    sh:targetClass build:Building ;
    sh:property [
        sh:path buildaccess:supportForHearingImpairedAvailable ;
        sh:minCount 1 ;
        sh:datatype xsd:boolean ;
        sh:hasValue "true"^^xsd:boolean
    ] .
